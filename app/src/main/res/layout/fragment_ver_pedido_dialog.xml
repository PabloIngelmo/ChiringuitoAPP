<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.components.VerPedidoDialog"
    tools:background="@color/black">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ccTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="30dp"
        android:background="?attr/colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/headerTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Pedido"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/productoTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/headerTV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="55dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/cantidadTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cant."
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/headerTV"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="85dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/precioTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/headerTV"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"/>

            <View
                android:id="@+id/separator"
                android:layout_width="300dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/precioTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/black"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pedidoListaRecycler"
                android:layout_width="340dp"
                android:layout_height="280dp"
                app:layout_constraintTop_toBottomOf="@+id/separator"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="40dp"
                android:paddingHorizontal="20dp"
                tools:listitem="@layout/item_pedido"/>

            <View
                android:id="@+id/separator2"
                android:layout_width="300dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/pedidoListaRecycler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/totalPedidoTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/separator2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/totalPedidoTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="103â‚¬"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/separator2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="20dp"/>

            <Button
                android:id="@+id/botonEliminarPedido"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/totalPedidoTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/botonConfirmarPedido"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="20dp"
                android:text="ELIMINAR"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@color/red"
                app:cornerRadius="0dp"
                app:layout_constraintHorizontal_weight="1"/>


            <Button
                android:id="@+id/botonConfirmarPedido"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/totalPedidoTV"
                app:layout_constraintStart_toEndOf="@+id/botonEliminarPedido"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:background="@color/green"
                app:cornerRadius="0dp"
                android:text="CONFIRMAR"
                android:textSize="20sp"
                app:layout_constraintHorizontal_weight="1.6"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>